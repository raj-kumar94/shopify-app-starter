<html>
    <head>
        <title>Login Here</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
    <body class="container">
        <div style=" background-color: forestgreen;width: 100%;height:90px;" class="page-header">
           <div style="float:right;color: white;padding-right: 30px;"><h1>Your CMS</h1></div> 
           <div style="float:left;padding:15px;"><img src="/public/images/web_logo_white_x50.png" class="img-responsive" style="height:50px;"/></div>
        </div>

        <div style="width:40%;margin:0 auto;" class="container row">
            <div style="width:100%;background-color:white" class="jumbotron col-sm-4 pull-center">
                <form action="/user/login" method="post">
                    <div style="padding-bottom: 50px;line-height:2">
                        <label  style="float:left;text-transform: uppercase;color: #438c24;">Email:</label>
                        <input style="float:right;border: none;border-radius: 2px;background: #a9ca9c;color:black;" type="text" name="email"/>
                    </div>
                    <br />
                    <div style="padding-bottom: 70px;line-height:2">
                        <label style="float:left;text-transform: uppercase;color: #438c24;">Password:</label>
                        <input style="float:right;border: none;border-radius: 2px;background: #a9ca9c;color:black"type="password" name="password"/>
                    </div>
                    <div style="float:right">
                        <input  class="btn btn-primary input_submit_button" type="submit" value="Log In"/>
                    </div>
                </form>                  
            </div>          
        </div>
    </body>

    <style>
.input_submit_button {
    color: #fff;
    background-color: #438c24;
    border-color: #438c24;
    font-weight: 600;
    text-transform: uppercase;
        }
        .input_submit_button:hover {
             color: #fff;
    background-color: #438c24;
    border-color: #438c24;
    font-weight: 600;
    text-transform: uppercase;  
        }
        input[type="text"]:focus {
            outline:none;
            box-shadow:none;
           
    border-color: #438c24 !important;
